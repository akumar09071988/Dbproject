package utdallas.oilTransactionMgmt.Dao;

import java.io.Serializable;
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;

public class BaseDao implements Serializable 
{
     private Connection connection =null;

	
     
     
     
     
     public BaseDao() {
		super();
		try
		{
			Class.forName("com.microsoft.sqlserver.jdbc.SQLServerDriver");
			String connectioUrl ="jdbc:sqlserver://localhost:1433;databaseName=ots;integratedSecurity=true;"//user=abhishek-pc\\Abhishek;password=qwerty12345;";
			//connection = DriverManager.getConnection("jdbc:sqlserver://localhost:1433/ots", "ABHISHEK-PC", "qwerty12345");
			connection = DriverManager.getConnection(connectioUrl);
		}
		catch(Exception e)
		{
			e.printStackTrace();
		}
	}


   public  void closeConnection()
   {
	   try {
		this.connection.close();
	} catch (SQLException e) {
		// TODO Auto-generated catch block
		e.printStackTrace();
	}
   }



	public Connection getConnection() {
		return connection;
	}

	
     
     
     
     
     
     
}
